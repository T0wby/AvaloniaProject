<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaDynamicApp.App"
             xmlns:local="using:AvaloniaDynamicApp"
             xmlns:sty="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
      <sty:FluentAvaloniaTheme PreferUserAccentColor="True"/>
      <StyleInclude Source="/Assets/Icons.axaml" />
      <StyleInclude Source="/Templates/ContentExample.axaml" />
    </Application.Styles>
</Application>